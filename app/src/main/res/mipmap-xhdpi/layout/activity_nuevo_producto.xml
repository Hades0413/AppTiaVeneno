<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVO PRODUCTO"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtCodigoPr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Codigo"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView29"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n:"
        app:layout_constraintTop_toBottomOf="@+id/edtCodigoPr"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtDescripcionPr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView30"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria:"
        app:layout_constraintTop_toBottomOf="@+id/edtDescripcionPr"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtCategoriaPr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Categoria"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView31"/>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio Compra:"
        app:layout_constraintTop_toBottomOf="@+id/edtCategoriaPr"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtPrecioCompra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Precio Compra"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@+id/textView34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView34"/>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio Venta:"
        app:layout_constraintTop_toBottomOf="@+id/edtPrecioCompra"
        app:layout_constraintStart_toStartOf="@+id/textView34"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtPrecioVenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Precio Venta"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@+id/textView35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView35"/>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Registro:"
        app:layout_constraintTop_toBottomOf="@+id/edtPrecioVenta"
        app:layout_constraintStart_toStartOf="@+id/textView35"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtFechaRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fecha Registro"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@+id/textView36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView36"/>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta Imagen:"
        app:layout_constraintTop_toBottomOf="@+id/edtFechaRegistro"
        app:layout_constraintStart_toStartOf="@+id/textView36"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edtRutaImagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ruta Imagen"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView37"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/edtRutaImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnRegresarPro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar" />

        <Button
            android:id="@+id/btnGrabarPro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grabar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



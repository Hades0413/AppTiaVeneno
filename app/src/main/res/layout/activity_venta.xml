<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/HeaderRegistarVenta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="3dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/green_700"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnRegistrarVentaVolver"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@color/transparente"
                android:src="@drawable/arrow_back_24"
                android:contentDescription="TODO" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:textSize="16dp"
                android:text="REGISTRAR VENTAS"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Monto a Pagar"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/HeaderRegistarVenta" />

        <TextView
            android:id="@+id/BalanceMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_rounded"
            app:layout_constraintDimensionRatio="4:2"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/BalanceMonto" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Nombre Cuenta"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:letterSpacing=".3"
            android:text="2459702663"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:text="Copiar"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_copy"
            app:iconPadding="4dp"
            app:iconSize="16dp"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="Nombre"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Jorge Olano"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Valid Thru"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="07/23"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_mastercard"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ELIGE TU FORMA DE PAGO:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="370dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/labelTipoPago"
                android:layout_marginEnd="2dp">

                <AutoCompleteTextView
                    android:id="@+id/edtRegistrarVentaTipoPago"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="13sp"
                    android:inputType="none"
                    app:simpleItems="@array/pagos"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/metodos_pago"
                android:scaleType="centerCrop"
                android:contentDescription="TODO" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/cliente_container"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/menu_container"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENTE"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="NOMBRE:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/cliente_container" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaNomCliente"
                        android:background="@drawable/custom_input_payment"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:hint="@string/nombre_y_apellido"
                        android:drawablePadding="1dp"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:drawableStart="@drawable/account_icon"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView27" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOCUMENTO DNI:"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/edtRegistrarVentaNomCliente" />

                    <EditText
                        android:id="@+id/edtRegistarVentaDocCliente"
                        android:layout_width="146dp"
                        android:layout_height="60dp"
                        android:paddingStart="5dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/custom_input_payment"
                        android:hint="@string/n_mero_de_documento"
                        android:textSize="14sp"
                        android:drawablePadding="4dp"
                        android:ems="10"
                        android:drawableStart="@drawable/account_doc"
                        android:inputType="number"
                        android:ellipsize="end"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView25" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRODUCTO"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/edtRegistarVentaDocCliente"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spnRegistrarVentaProducto"
                android:layout_width="370dp"
                android:layout_height="52dp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="CANTIDAD PEDIDOS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/spnRegistrarVentaProducto" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaCantidad"
                        android:background="@drawable/custom_input_payment"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:paddingStart="10dp"
                        android:textSize="14sp"
                        android:hint="@string/cantidad_de_platos"
                        android:drawableStart="@drawable/package_variant"
                        android:inputType="number"
                        android:drawablePadding="1dp"
                        android:ems="10"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="MONTO PAGO CON"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/edtRegistrarVentaCantidad" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaMontoPago"
                        android:background="@drawable/custom_input_payment"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:paddingStart="10dp"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/cash_multiple"
                        android:drawablePadding="1dp"
                        android:hint="@string/con_cu_nto_paga"
                        android:inputType="numberDecimal"
                        android:ellipsize="end"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView31" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETALLE DE PRODUCTO"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/cliente_container" />

        <LinearLayout
            android:id="@+id/producto_container"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:text="PRECIO PRODUCTO"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaPrecioVenta"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:drawableStart="@drawable/currency_usd"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:paddingStart="10dp"
                        android:background="@color/plomo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="PRECIO VENTA TOTAL"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaTotal"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:drawableStart="@drawable/currency_usd"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:paddingStart="10dp"
                        android:background="@color/plomo" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="DETALLE DE MONTO"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="MONTO SUB TOTAL"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaMontoSubTotal"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:drawableStart="@drawable/currency_usd"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:paddingStart="10dp"
                        android:background="@color/plomo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="MONTO IGV"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaMontoIGV"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:paddingStart="10dp"
                        android:drawableStart="@drawable/currency_usd"
                        android:background="@color/plomo" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"

                >

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="MONTO CAMBIO"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/edtRegistrarVentaMontoTotal" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaMontoCambio"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:drawableStart="@drawable/currency_usd"
                        android:background="@color/plomo"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="MONTO TOTAL"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/edtRegistrarVentaMontoIGV" />

                    <EditText
                        android:id="@+id/edtRegistrarVentaMontoTotal"
                        android:layout_width="145dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:focusable="false"
                        android:clickable="false"
                        android:drawableStart="@drawable/currency_usd"
                        android:background="@color/plomo"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView32" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


            <Button
                android:id="@+id/btnRegistrarVentaAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:text="AGREGAR"
                android:backgroundTint="@color/green_500"

                app:layout_constraintTop_toBottomOf="@+id/producto_container"
                />



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
